<Window x:Class="Client_Lab1_PRN222.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics Viewer" Height="350" Width="500">

    <Grid Margin="10">
        <StackPanel>

            <ComboBox x:Name="cbCategory" Width="200" Margin="0,0,10,0">
                <ComboBoxItem Content="Customer"/>
                <ComboBoxItem Content="Product"/>
                <ComboBoxItem Content="Employee"/>
            </ComboBox>
            <ComboBox x:Name="cbType" Width="200">
                <ComboBoxItem Content="ByYear"/>
                <ComboBoxItem Content="ByMonth"/>
                <ComboBoxItem Content="ByDay"/>
            </ComboBox>



            <Button Content="Load Statistics"
                    Margin="0,10"
                    Click="Load_Click"/>

            <DataGrid x:Name="dgData"
                      AutoGenerateColumns="True"
                      Height="200"/>

        </StackPanel>
    </Grid>
</Window>
